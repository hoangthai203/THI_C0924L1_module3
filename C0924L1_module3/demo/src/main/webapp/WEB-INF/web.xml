<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Cấu hình Servlet cho BookController -->
    <servlet>
        <servlet-name>BookController</servlet-name>
        <servlet-class>com.codegym.demo.controller.BookController</servlet-class>
    </servlet>

    <!-- Cấu hình Servlet Mapping cho BookController -->
    <servlet-mapping>
        <servlet-name>BookController</servlet-name>
        <url-pattern>/book-list</url-pattern>
    </servlet-mapping>

    <!-- Cấu hình Servlet cho BorrowController -->
    <servlet>
        <servlet-name>BorrowController</servlet-name>
        <servlet-class>com.codegym.demo.controller.BorrowController</servlet-class>
    </servlet>

    <!-- Cấu hình Servlet Mapping cho BorrowController -->
    <servlet-mapping>
        <servlet-name>BorrowController</servlet-name>
        <url-pattern>/borrow</url-pattern>
    </servlet-mapping>

    <!-- Cấu hình Servlet cho BorrowFailController -->
    <servlet>
        <servlet-name>BorrowFailServlet</servlet-name>
        <servlet-class>com.codegym.demo.controller.BorrowFailController</servlet-class>
    </servlet>

    <!-- Cấu hình Servlet Mapping cho BorrowFailController -->
    <servlet-mapping>
        <servlet-name>BorrowFailServlet</servlet-name>
        <url-pattern>/borrow-fail</url-pattern>
    </servlet-mapping>

    <!-- Cấu hình Servlet cho BorrowedBookController -->
    <servlet>
        <servlet-name>BorrowedBookController</servlet-name>
        <servlet-class>com.codegym.demo.controller.BorrowedBookController</servlet-class>
    </servlet>

    <!-- Cấu hình Servlet Mapping cho BorrowedBookController -->
    <servlet-mapping>
        <servlet-name>BorrowedBookController</servlet-name>
        <url-pattern>/borrowed-books</url-pattern>
    </servlet-mapping>

    <!-- Cấu hình Servlet cho ReturnBookController -->
    <servlet>
        <servlet-name>ReturnBookController</servlet-name>
        <servlet-class>com.codegym.demo.controller.ReturnBookController</servlet-class>
    </servlet>

    <!-- Cấu hình Servlet Mapping cho ReturnBookController -->
    <servlet-mapping>
        <servlet-name>ReturnBookController</servlet-name>
        <url-pattern>/return-book</url-pattern>
    </servlet-mapping>
</web-app>